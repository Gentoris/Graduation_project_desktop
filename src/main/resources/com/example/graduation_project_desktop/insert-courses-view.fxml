<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.graduation_project_desktop.InsertCoursesController">
    <children>
        <VBox alignment="TOP_CENTER">
            <children>
                <Label text="Kurzus neve">
                    <VBox.margin>
                        <Insets bottom="3.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="nameInput" maxWidth="300.0" prefWidth="100.0" />
            </children>
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </VBox>
        <VBox alignment="TOP_CENTER">
            <children>
                <Label text="Leírás">
                    <VBox.margin>
                        <Insets bottom="3.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="descriptionInput" maxWidth="300.0" prefWidth="100.0" />
            </children>
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </VBox>
        <VBox alignment="TOP_CENTER">
            <children>
                <Label text="Fotó link">
                    <VBox.margin>
                        <Insets bottom="3.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="cphotoInput" maxWidth="300.0" prefWidth="100.0" />
            </children>
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </VBox>
        <VBox alignment="TOP_CENTER">
            <children>
                <Label text="Tantárgy">
                    <VBox.margin>
                        <Insets bottom="3.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="subjectInput" maxWidth="300.0" prefWidth="100.0" />
            </children>
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </VBox>
        <VBox alignment="TOP_CENTER">
            <children>
                <Label text="Témakör">
                    <VBox.margin>
                        <Insets bottom="3.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="topicInput" maxWidth="300.0" prefWidth="100.0" />
            </children>
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </VBox>
        <VBox alignment="TOP_CENTER">
            <children>
                <Label text="Határidő">
                    <VBox.margin>
                        <Insets bottom="3.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="deadlineInput" maxWidth="300.0" prefWidth="100.0" />
            </children>
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </VBox>
        <VBox alignment="TOP_CENTER">
            <children>
                <Label text="Részletek">
                    <VBox.margin>
                        <Insets bottom="3.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="detailsInput" maxWidth="300.0" prefWidth="100.0" />
            </children>
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </VBox>
        <VBox alignment="TOP_CENTER">
            <children>
                <Label text="Fájl link">
                    <VBox.margin>
                        <Insets bottom="3.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="file_urlInput" maxWidth="300.0" prefWidth="100.0" />
            </children>
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </VBox>
        <VBox alignment="TOP_CENTER">
            <children>
                <Button fx:id="insertCourseButton" mnemonicParsing="false" onAction="#InsertCourseClick" prefWidth="250.0" text="Hozzáadás" />
            </children>
            <VBox.margin>
                <Insets bottom="20.0" top="40.0" />
            </VBox.margin>
        </VBox>
    </children>
</VBox>