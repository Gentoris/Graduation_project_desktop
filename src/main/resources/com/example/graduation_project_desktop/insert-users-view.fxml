<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.graduation_project_desktop.InsertUsersController">
    <children>
        <VBox alignment="TOP_CENTER">
            <children>
                <Label text="Felhasználó neve">
                    <VBox.margin>
                        <Insets bottom="3.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="usernameInput" maxWidth="300.0" prefWidth="100.0" />
            </children>
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </VBox>
        <VBox alignment="TOP_CENTER">
            <children>
                <Label text="Jelszó">
                    <VBox.margin>
                        <Insets bottom="3.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="passwordInput" maxWidth="300.0" prefWidth="100.0" />
            </children>
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </VBox>
        <VBox alignment="TOP_CENTER">
            <children>
                <Label text="email cim">
                    <VBox.margin>
                        <Insets bottom="3.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="emailInput" maxWidth="300.0" prefWidth="100.0" />
            </children>
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </VBox>
        <VBox alignment="TOP_CENTER">
            <children>
                <Label text="Profil kép">
                    <VBox.margin>
                        <Insets bottom="3.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="profileInput" maxWidth="300.0" prefWidth="100.0" />
            </children>
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </VBox>
        <VBox alignment="TOP_CENTER">
            <children>
                <Button fx:id="InsertUserButton" mnemonicParsing="false" onAction="#InsertUserClick" prefWidth="250.0" text="Hozzáadás" />
            </children>
            <VBox.margin>
                <Insets bottom="20.0" top="40.0" />
            </VBox.margin>
        </VBox>
    </children>
</VBox>